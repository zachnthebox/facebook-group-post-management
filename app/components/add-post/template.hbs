<div class="form-group">
  <label>Text</label>
  {{input class="form-control" value=text}}
</div>
<div class="form-group">
  <label>Type</label>
  {{input class="form-control" value=type readonly=true}}
</div>
<div class="form-group">
  <label>Post Date</label>
  {{pikaday-input class="form-control pikaday" value=date format="MM/DD/YYYY" readonly="readonly" minDate=minDate}}
</div>
<button class="btn btn-default" {{action 'addPost'}}>Add Post</button>
